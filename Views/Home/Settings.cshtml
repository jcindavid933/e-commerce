@model User
<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <title>E-Commerce</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="stylesheet" href="~/css/style.css"/>
        <script
            src="https://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous">
        </script>
        <script type="text/javascript">
            $(document).ready(function() {
                $('#logout_confirm').click(function(){
                    if(confirm('Are you sure to logout')) {
                        return true;
                    }
                    return false;
                });
            });
        </script>
    </head>
    <body>
        <div class="container">
            @Html.Partial("Navbar")
            <h1>Update your User settings here</h1>
            <form asp-action="Update_Settings" asp-controller="Home" method="post">
                <input asp-for="UserId" type="hidden" value="@ViewBag.Id">
                <div class="form-group row">
                    <label asp-for="name" class="col-sm-2 col-form-label">Name: </label>
                    <div class="col-sm-10">
                        <input asp-for="name" type="text" class="form-control" id="inputEmail3">
                    </div>
                    <span asp-validation-for="name"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="alias" class="col-sm-2 col-form-label">Alias: </label>
                    <div class="col-sm-10">
                        <input asp-for="alias" type="text" class="form-control" id="inputEmail3">
                    </div>
                    <span asp-validation-for="alias"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="email" class="col-sm-2 col-form-label">Email: </label>
                    <div class="col-sm-10">
                        <input asp-for="email" type="email" class="form-control" id="inputEmail3">
                    </div>
                    <span asp-validation-for="email"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="password" class="col-sm-2 col-form-label">Password: </label>
                    <div class="col-sm-10">
                        <input asp-for="password" type="password" class="form-control" id="inputEmail3">
                    </div>
                    <span asp-validation-for="password"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="pass_confirm" class="col-sm-2 col-form-label">Confirm PW: </label>
                    <div class="col-sm-10">
                        <input asp-for="pass_confirm" type="password" class="form-control" id="inputEmail3">
                    </div>
                    <span asp-validation-for="pass_confirm"></span>
                </div>
                <button id="button5" type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    </body>
</html>
