@model Product
<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <title>E-Commerce</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="stylesheet" href="~/css/style.css"/>
        <script
            src="https://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous">
        </script>
        <script type="text/javascript">
            $(document).ready(function() {
                $('#logout_confirm').click(function(){
                    if(confirm('Are you sure to logout')) {
                        return true;
                    }
                    return false;
                });
            });
        </script>
    </head>
    <body>
        <div class="container">
            @Html.Partial("Navbar")

            <div class="side_div">
                <h4>Add a new product</h4>
                <form asp-action="Create_Product" asp-controller="Home" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Name">Name: </label>
                        <input asp-for="Name" type="text" class="form-control" id="exampleFormControlInput1">
                    </div>
                    <span asp-validation-for="Name"></span>
                    <div class="form-group">
                        <label asp-for="Desc">Description: </label>
                        <input asp-for="Desc" type="text" class="form-control" id="exampleFormControlInput1">
                    </div>
                    <span asp-validation-for="Desc"></span>
                    <div class="form-group">
                        <label asp-for="Quantity">Quantity: </label>
                        <input asp-for="Quantity" type="number" class="form-control" id="exampleFormControlInput1">
                    </div>
                    <span asp-validation-for="Quantity"></span>
                    <div class="form-group">
                        <label asp-for="ImageFile">Image: </label>
                        <input asp-for="ImageFile" type="file">
                    </div>
                    <span asp-validation-for="ImageFile"></span>
                    <p>@ViewBag.Error</p>
                    <input type="hidden" asp-for="UserId" value="@ViewBag.Id">
                    <button id="button3" type="submit" class="btn btn-primary">Create</button>
                </form>
            </div>
            @Html.Partial("ProductList", (Product)@ViewBag.product)
        </div>
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    </body>
</html>
